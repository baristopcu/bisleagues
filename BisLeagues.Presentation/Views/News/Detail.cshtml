@model BisLeagues.Core.Models.New

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_Heading.cshtml";
}

@section Heading{



    <!-- Page Heading & Breadcrumbs  -->
    <div class="page-heading-breadcrumbs">
        <div class="container">
            <h2>Match Detail</h2>
            <ul class="breadcrumbs">
                <li><a href="#">Home</a></li>
                <li>Match Detail</li>
            </ul>
        </div>
    </div>
    <!-- Page Heading & Breadcrumbs  -->
    <!-- Page Heading banner -->
    <div class="inner-banner style-2 overlay-dark theme-padding parallax-window" style="background-image: url(@Url.Action("Resize", "Image", new { url = "Assets/images/backgrounds-football-1.jpg", width = 1920, height = 900 }))">
        <div class="container theme-padding">
            <ul id="match-detail-slider" class="match-detail-slider">
                <li>
                    <div class="pager-heading match-detail h-white">
                        <span class="pull-left win-tag"><img src="@Url.Action("Resize", "Image", new { url = Model.Match.Home.Logo.Path, width = 200, height = 200 })" alt=""></span>
                        <div class="vs-match-heading position-center-center">
                            <strong class="vs-match-result">@Model.Match.<span>Vs</span>1</strong>
                            <span class="end-time"><i class="fa fa-clock-o"></i>13:57 min (IST)</span>
                        </div>
                        <span class="pull-right loss-tag"><img src="@Url.Action("Resize", "Image", new { url = Model.Match.Away.Logo.Path, width = 200, height = 200 })" alt=""></span>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <!-- Page Heading banner -->

}


@model BisLeagues.Presentation.Models.ViewModels.TeamApplicationViewModel
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/Shared/_Layout_Heading.cshtml";
}
@section Heading{

    <!-- Page Heading & Breadcrumbs  -->
    <div class="page-heading-breadcrumbs hidden-xs">
        <div class="container">
            <h2>GİRİŞ YAP</h2>
            <ul class="breadcrumbs">
                <li><a href="@Url.Action("Index","Home")">Anasayfa</a></li>
                <li>GİRİŞ YAP</li>
            </ul>
        </div>
    </div>
    <!-- Page Heading & Breadcrumbs  -->
}

<!-- Contact -->
<div class="theme-padding-top white-bg">
    <div class="container">

        <!-- Main Heading -->
        <div class="main-heading-holder">
            <div class="main-heading">
                <h2>Giriş Yap</h2>
                <p>Üyeliğin yok mu ? Buradan <a style="color:red;" href="@Url.Action("SignUp", "Authentication")">kayıt ol.</a></p>
            </div>
        </div>
        <!-- Main Heading -->

    </div>
</div>
<!-- Contact -->
<!-- Contact Form Holder -->
<div class="theme-padding-bottom">
    <div class="container">
        @if (TempData["Message"] != null)
        {
            <div class="row">
                <div class="hidden-sm col-md-2"></div>
                <div class="col-sm-12 col-md-8">
                    <div class="success-cart">
                        <p style="color: red;"><i style="color: red;" class="fa fa-times-circle-o"></i>@TempData["Message"]</p>
                    </div>
                </div>
                <div class="hidden-sm col-md-2"></div>
            </div>
        }
        <div class="row justify-content-center">
            <!-- Form -->
            <div class="hidden-sm col-md-4"></div>
            <div class="col-md-6 wrapper">
                <form action="@Url.Action("Login", "Authentication")" method="post" class="contact-form col-sm-12 col-md-8" enctype="multipart/form-data">
                    <div class="form-group wrapper">
                        <i class=" fa fa-envelope"></i>
                        <input type="text" class="form-control" name="username" placeholder="Kullanıcı Adı" required>
                    </div>
                    <div class="form-group ">
                        <i class=" fa fa-lock"></i>
                        <input type="password" class="form-control" name="password" placeholder="*******" required>
                    </div>
                    <div class="form-group">
                        <button class="btn full-width primary-btn">Girelim bakalım</button>
                    </div>
                </form>
            </div>
            <div class="hidden-sm col-md-2"></div>
            <!-- Form -->
        </div>
    </div>
</div>
<!-- Contact Form Holder -->
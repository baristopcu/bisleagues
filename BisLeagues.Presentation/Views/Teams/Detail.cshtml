@model BisLeagues.Core.Models.Team

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout_Heading.cshtml";
}
@section Heading{



    <!-- Page Heading & Breadcrumbs  -->
    <div class="page-heading-breadcrumbs">
        <div class="container">
            <h2>Takım Detay</h2>
            <ul class="breadcrumbs">
                <li><a href="@Url.Action("Index","Home")">Anasayfa</a></li>
                <li>Takım Detay</li>
            </ul>
        </div>
    </div>
    <!-- Page Heading & Breadcrumbs  -->
    <!-- Page Heading banner -->
    <div class="overlay-dark theme-padding parallax-window" data-appear-top-offset="600" data-parallax="scroll" style="background-image: url(@Url.Action("Resize", "Image", new { url = "Assets/images/backgrounds-football-1.jpg", width = 1920, height = 900 }))">
    </div>
    @*<div class="inner-banner style-2 overlay-dark theme-padding parallax-window" style="background-image: url(@Url.Action("Resize", "Image", new { url = "Assets/images/backgrounds-football-1.jpg", width = 1920, height = 900 }))">*@

    <!-- Page Heading banner -->

}

<!-- Team Detail -->
<div class="team-detail-holder theme-padding white-bg">
    <div class="container">

        <!-- Row Holder -->
        <div class="row">

            <!-- Team without Hover -->
            <div class="col-lg-3 col-md-3 col-sm-5">
                <div class="team-column without-hover">
                    <img src="@Url.Action("Resize", "Image", new { url = Model.Logo.Path, width = 269, height = 416 })" alt="">
                    <div class="team-detail">
                        <h5>@Model.Name</h5>
                        <span class="desination">Defender</span>
                        <div class="detail-inner">
                            <ul>
                                <li>Kuruluş Tarihi</li>
                                <li>Şehir</li>
                                <li>İlçe</li>
                                <li>Sosyal Medya</li>
                            </ul>
                            <ul>
                                <li>
                                    @Html.DisplayFor(modelItem => Model.CreatedOnUtc)
                                </li>
                                <li>
                                    @Html.DisplayFor(modelItem => Model.City.Name)
                                </li>
                                <li>
                                    @Html.DisplayFor(modelItem => Model.County.Name)
                                </li>

                                <li>
                                    <ul class="social-icons">
                                        <li><a class="facebook" href="#"><i class="fa fa-facebook"></i></a></li>
                                        <li><a class="twitter" href="#"><i class="fa fa-twitter"></i></a></li>
                                        <li><a class="youtube" href="#"><i class="fa fa-youtube-play"></i></a></li>
                                        <li><a class="pinterest" href="#"><i class="fa fa-pinterest-p"></i></a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Team without Hover -->
            <!-- Detail -->
            <div class="col-lg-9 col-md-9 col-sm-7">

                <!-- Team Detail Content -->
                <div class="team-detail-content theme-padding-bottom">
                    <h2>@Model.Name Hakkında</h2>
                    @Html.Raw(Model.Description)
                    @*<div class="tags-holder">
                        <ul class="tags-list pull-left">
                            <li><i class="fa fa-tags"></i>Tags</li>
                            <li><a href="#">Scores</a></li>
                            <li><a href="#">transfers</a></li>
                            <li><a href="#">teams</a></li>
                            <li><a href="#">cups</a></li>
                        </ul>
                        <ul class="social-icons pull-right">
                            <li>Share this post</li>
                            <li><a class="facebook" href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a class="twitter" href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a class="youtube" href="#"><i class="fa fa-youtube-play"></i></a></li>
                            <li><a class="pinterest" href="#"><i class="fa fa-pinterest-p"></i></a></li>
                        </ul>
                    </div>*@
                </div>
                <!-- Team Detail Content -->
                <!-- Palyer Career -->
                <div class="palyer-career theme-padding-bottom">
                    <h2>Takım Oyuncuları</h2>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Ad Soyad</th>
                                    <th>Doğum Tarihi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var mapping in Model.TeamPlayers)
                                {
                                <tr>
                                    <td>@mapping.Player.User.FirstName @mapping.Player.User.LastName</td>
                                    <td>@(mapping.Player.BirthDate.HasValue ? mapping.Player.BirthDate.Value.ToString("dd MMMM yyyy", System.Globalization.CultureInfo.InvariantCulture) : "")</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- Palyer Career -->

            </div>
            <!-- Detail -->

        </div>
        <!-- Row Holder  -->

    </div>
</div>
<!-- Team Detail -->
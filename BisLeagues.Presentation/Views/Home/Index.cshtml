@model BisLeagues.Presentation.Models.ViewModels.HomeViewModel
@inject BisLeagues.Core.Utility.IUserManager UserManager
@{
    ViewData["Title"] = "Anasayfa";
    Layout = "~/Views/Shared/_Layout_Slider.cshtml";

}
@section Slider
    {
    <partial name="_Partials/_Slider" model="Model.TopNews" />

}

<!-- Next Match -->
<div class="next-match style-2">
    <div class="container p-0">
        <!-- Macth left Time -->
        <div class="col-sm-6 bg-2">
            <div class="left-match-time">
                <h2>Gelecek Maç</h2>
                <ul id="countdown-1" class="countdown">
                    <li><span class="days">@Model.UpComingMatchCounter.Days</span>Gün</li>
                    <li><span class="hours">@Model.UpComingMatchCounter.Hours</span>Saat </li>
                    <li><span class="minutes">@Model.UpComingMatchCounter.Minutes</span>Dakika </li>
                </ul>
                <span>@(Model.UpComingMatch != null ? TimeZoneInfo.ConvertTimeFromUtc(Model.UpComingMatch.MatchDate, TimeZoneInfo.Local).ToString("dd.MM.yyyy H:mm") : "Sırada maç yok !")</span>
            </div>
        </div>
        <!-- Macth left Time -->
        <!-- Vs Team -->
        <div class="col-sm-6 bg-1">
            <div class="vs-team">
                <div class="team-btw-match">
                    @if (Model.UpComingMatch != null)
                    {
                        <ul>
                            <li>
                                <img src="@Url.Action("Resize", "Image", new { url = Model.UpComingMatch.Home.Logo.Path, width = 105, height = 105 })" alt="@Model.UpComingMatch.Home.Name">
                                <span><a style="color:black;" href="@Url.Action("Detail", "Team", new { Model.UpComingMatch.Home.Id } )">@Model.UpComingMatch.Home.Name</a></span>
                            </li>
                            <li>
                                <img src="@Url.Action("Resize", "Image", new { url = Model.UpComingMatch.Away.Logo.Path, width = 105, height = 105 })" alt="@Model.UpComingMatch.Away.Name">
                                <span><a style="color:black;" href="@Url.Action("Detail", "Team", new { Model.UpComingMatch.Away.Id })">@Model.UpComingMatch.Away.Name</a></span>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </div>
        <!-- Vs Team -->

    </div>
</div>
<!-- Next Match -->
<!-- Match Detail -->
<section class="theme-padding-bottom bg-fixed">
    <div class="container">
        <br />
        <br />
        <br />
        <!-- Match Detail Content -->
        <div class="match-detail-content">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                    <div class="row" style="margin-top: 20px;">
                        <!-- Point Table -->
                        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                @await Component.InvokeAsync("PointTable", new { numberOfItems = 10 })
                        </div>
                        <!-- Point Table -->
                        <!-- Goal King-->
                        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                            <h3>
                                <span>GOL KRALLIĞI</span>
                            </h3>
                            <div class="last-matches styel-3">
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Oyuncu</th>
                                            <th>Takım</th>
                                            <th>Gol</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{int order = 1; }
                                        @foreach (var row in Model.GoalKingPlayers)
                                        {

                                            <tr>
                                                <td>@order</td>
                                                <td>
                                                    <a href="@Url.Action("Detail", "Profile", new { row.Player.Id })">
                                                        @row.Player.User.FirstName
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("Detail", "Team", new { row.Player.TeamPlayers.FirstOrDefault().TeamId })">
                                                        @row.Player.TeamPlayers.FirstOrDefault().Team.Name
                                                    </a>
                                                </td>
                                                <td>@row.Goals</td>
                                            </tr>
                                            order++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- Goal King-->
                        <!-- Exchange-->
                        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                            <div class="macth-fixture styel-1">
                                <h3><span>BORSA DURUMU</span></h3>
                                <div class="last-matches styel-3">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-hover">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Oyuncu</th>
                                                    <th>Takım</th>
                                                    <th>DGR</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{int orderForExchange = 1; }
                                                @foreach (var row in Model.ExchangeTopPlayers)
                                                {

                                                    <tr>
                                                        <td>@orderForExchange</td>
                                                        <td>
                                                            <a href="@Url.Action("Detail", "Profile", new { row.Player.User.Id })">
                                                                @row.Player.User.FirstName
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a href="@Url.Action("Detail", "Team", new { @row.Player.TeamPlayers.FirstOrDefault().Team.Id })">
                                                                @row.Player.TeamPlayers.FirstOrDefault().Team.Name
                                                            </a>
                                                        </td>
                                                        <td>@row.Value $</td>
                                                    </tr>
                                                    orderForExchange++;
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Exchange-->
                    </div>

                </div>
            </div>
            <div class="row">
                <!-- Latest News -->
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="latest-news-holder">
                        <h3><span>HABERLER</span></h3>

                        <!-- latest-news Slider -->
                        <div class="row no-gutters white-bg">

                            <!-- Slider -->
                            <div class="col-sm-9">
                                <ul id="latest-news-slider" class="latest-news-slider" style="max-height: 615px; min-height: 346px;">
                                    @foreach (var newItem in Model.TopNews)
                                    {
                                        <li>
                                            <a href="@Url.Action("Detail","News", new { id = newItem.Id })">
                                                @if (newItem.CoverPhoto != null)
                                                {
                                                    <img src="@Url.Action("Resize", "Image", new { url = newItem.CoverPhoto.Path, width = 855, height = 346 })" alt="@newItem.Caption">

                                                }
                                                else
                                                {
                                                    <img src="#" alt="@newItem.Caption">

                                                }


                                                <p style="color:black;">@newItem.ShortDescription <span style="color:red;">Devamını Oku</span></p>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </div>
                            <!-- Slider -->
                            <!-- Thumnail -->
                            <div class="col-sm-3">
                                <ul id="latest-news-thumb" class="latest-news-thumb">
                                    @foreach (var newItem in Model.TopNews)
                                    {
                                        <li>
                                            <a href="@Url.Action("Detail","News", new { id = newItem.Id })">
                                                <p>@newItem.Caption</p>
                                                <span>@newItem.CreatedOnUtc.ToLocalTime().ToString("dd MMMM yyyy", System.Globalization.CultureInfo.InvariantCulture)</span>
                                            </a>
                                        </li>
                                    }
                                </ul>
                                <ul class="news-thumb-arrows">
                                    <li class="prev"><span class="fa fa-angle-up"></span></li>
                                    <li class="next"><span class="fa fa-angle-down"></span></li>
                                </ul>
                            </div>
                            <!-- Thumnail -->

                        </div>
                        <!-- latest-news Slider -->
                    </div>
                </div>
                <!-- Latest News -->
            </div>
        </div>
    </div>
    <!-- Match Detail Content -->
</section>
<!-- Match Detail -->
<!-- Player Features And History -->
<!-- Gallery And Team -->
<div class="gallery-holder" style="padding-bottom: 150px;">
    <!-- Separator -->
    <div class="container text-center">
        <span class="sprater"><i class="fa fa-futbol-o"></i></span>
    </div>
    <!-- Separator -->
    <!-- Team -->
    <div class="container">
        <div class="team-holder theme-padding-top">

            <!-- Main Heading -->
            <div class="main-heading-holder">
                <div class="main-heading">
                    <h2>Zirvede ki dört takım</h2>
                    <p>Zirvede ki takımların kartları</p>
                </div>
            </div>
            <!-- Main Heading -->
            <!-- Team Row -->
            <div id="team-slider" class="team-slider">
                @if (Model.TopTeams != null)
                {
                    @foreach (var team in Model.TopTeams)
                    {
                        <!-- Team Column -->
                        <div class="item">
                            <div class="team-column">
                                <img src="@Url.Action("Resize", "Image", new { url = team.Logo.Path, width = 269, height = 416})" alt="@team.Name">
                                <div class="team-detail">
                                    <h5>
                                        <a href="@Url.Action("Detail", "Team", new { team.Id })">
                                            @team.Name
                                        </a>
                                    </h5>
                                    <span class="desination">@team.County.Name</span>
                                    <div class="detail-inner">
                                        <ul>
                                            <li>Kuruluş Tarihi</li>
                                            <li>Şehir</li>
                                            <li>İlçe</li>
                                            <li>Sosyal Medya</li>
                                            <li>Sosyal Medya</li>

                                        </ul>
                                        <ul>
                                            <li>
                                                @team.CreatedOnUtc.Value.ToShortDateString()
                                            </li>
                                            <li>
                                                @team.City.Name
                                            </li>
                                            <li>
                                                @team.County.Name
                                            </li>
                                            <li>Sosyal Medya</li>

                                            <li>
                                                <ul class="social-icons">
                                                    <li><a class="facebook" href="#"><i class="fa fa-facebook"></i></a></li>
                                                    <li><a class="twitter" href="#"><i class="fa fa-twitter"></i></a></li>
                                                    <li><a class="youtube" href="#"><i class="fa fa-youtube-play"></i></a></li>
                                                    <li><a class="pinterest" href="#"><i class="fa fa-pinterest-p"></i></a></li>
                                                </ul>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Team Column -->
                    }
                }

            </div>
            <!-- Team Row -->

        </div>
    </div>
    <!-- Team -->

</div>
<!-- Gallery And Team -->
@inject BisLeagues.Core.Utility.IUserManager UserManager
    <!-- Top bar -->
<div class="topbar-and-logobar">
    <div class="container">

        <!-- Responsive Button -->
        <div class="responsive-btn pull-right">
            <a href="#menu" class="menu-link"><i class="fa fa-bars"></i></a>
        </div>
        <!-- Responsive Button -->
        <!-- User Login Option -->
        <ul class="user-login-option pull-right">
            <li class="language-dropdown">
                <div class="language-dropdown">
                    <select class="language-dropdown" id="SeasonPick" name="SeasonPick">
                        <option value="" selected>Sezon</option>
                    </select>
                </div>
            </li>
            <li class="social-icon">
                <ul class="social-icons style-5">
                    <li><a class="facebook" href="#"><i class="fa fa-facebook"></i></a></li>
                    <li><a class="twitter" href="#"><i class="fa fa-twitter"></i></a></li>
                    <li><a class="youtube" href="#"><i class="fa fa-youtube-play"></i></a></li>
                    <li><a class="pinterest" href="#"><i class="fa fa-pinterest-p"></i></a></li>
                </ul>
            </li>
            <li class="language-dropdown">
                <a id="choses-lang" href="@Url.Action("Detail","Team")"><i class="fa fa-users"></i>  TAKIMIM</a>
                <ul id="language-dropdown">
                </ul>
            </li>
            <li class="language-dropdown">
                <a id="choses-lang" href="@Url.Action("Detail","Profile")"><i class="fa fa-user"></i>  PROFİLİM</a>
                <ul id="language-dropdown">
                </ul>
            </li>
            <li class="login-modal">
                @if (!User.Identity.IsAuthenticated)
                {
                    <a href="#" class="login" data-toggle="modal" data-target="#login-modal"><i class="fa fa-user"></i>Üye Girişi / Kayıt Ol</a>
                    <div class="modal fade" id="login-modal">
                        <div class="login-form position-center-center">
                            <h2>Giriş Yap<button class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button></h2>
                            <form action="@Url.Action("Login", "Authentication")" method="post">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="username" placeholder="Eposta" required>
                                    <i class=" fa fa-envelope"></i>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" name="password" placeholder="*******" required>
                                    <i class=" fa fa-lock"></i>
                                </div>
                                <div class="form-group custom-checkbox">
                                    @*<label>
                                    <input type="checkbox"> Stay login
                                </label>*@
                                    <a class="pull-left forgot-password" href="#"></a>
                                    <a href="#" class="pull-left forgot-password" data-toggle="modal" data-target="#login-modal-3">Kayıt Ol</a>
                                    <a class="pull-right forgot-password" href="#"></a>
                                    <a href="#" class="pull-right forgot-password" data-toggle="modal" data-target="#login-modal-2">Şifremi unuttum</a>
                                </div>
                                <div class="form-group">
                                    <button class="btn full-width red-btn">Girelim bakalım</button>
                                </div>
                            </form>
                            @*<span class="or-reprater"></span>*@
                        </div>
                    </div>
                    <div class="modal fade" id="login-modal-2">
                        <div class="login-form position-center-center">
                            <h2>Şifre Lazım Bana<button class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button></h2>
                            <form>
                                <div class="form-group">
                                    <input type="text" class="form-control" name="user" placeholder="Kullanıcı Adı">
                                    <i class=" fa fa-envelope"></i>
                                </div>
                                <div class="form-group">
                                    <button class="btn full-width red-btn">Yolla çabuk</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="modal fade" id="login-modal-3">
                        <div class="login-form position-center-center">
                            <h2>Kayıt Ol<button class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button></h2>
                            <form action="@Url.Action("SignUp", "Authentication")" method="post">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="firstName" placeholder="İsim" required>
                                    <i class=" fa fa-user"></i>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" name="lastName" placeholder="Soyisim" required>
                                    <i class=" fa fa-user"></i>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control" name="email" placeholder="Email" required>
                                    <i class=" fa fa-envelope"></i>
                                </div>
                                <div class="form-group">
                                    <input type="date" class="form-control" name="birthDate" placeholder="Doğum Tarihi" required>
                                    <i class=" fa fa-calendar"></i>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" name="password" placeholder="Şifre" required>
                                    <i class=" fa fa-lock"></i>
                                </div>
                                <div class="form-group">
                                    <button class="btn full-width red-btn">Gönder</button>
                                </div>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <a href="@Url.Action("SignOut", "Authentication")" class="login"><i class="fa fa-sign-out"></i>Çıkış Yap</a>
                }
            </li>
        </ul>
        <!-- User Login Option -->

    </div>
</div>
<!-- Top bar -->
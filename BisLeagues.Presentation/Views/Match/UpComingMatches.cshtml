@model BisLeagues.Presentation.Models.ViewModels.UpComingMatchesViewModel

@{
    ViewData["Title"] = "Gelecek Maçlar";
    Layout = "~/Views/Shared/_Layout_Heading.cshtml";
}
@if (Model.NoMatchFound != true)
{
    @section Heading{

        <!-- Page Heading & Breadcrumbs  -->
        <div class="page-heading-breadcrumbs hidden-xs">
            <div class="container">
                <h2>Gelecek Maçlar</h2>
                <ul class="breadcrumbs">
                    <li><a href="@Url.Action("Index","Home")">Anasayfa</a></li>
                    <li>Gelecek Maçlar</li>
                </ul>
            </div>
        </div>
        <!-- Page Heading & Breadcrumbs  -->
        <!-- Page Heading banner -->
        <div class="inner-banner style-2 overlay-dark theme-padding parallax-window"  style="background-image: url(@Url.Action("Resize", "Image", new { url = "Assets/images/banner.jpeg", width = 1280, height = 250 }))">
            <div class="container">
                <div class="last-match-banner future-match-banner">
                    <div class="home-team">
                        <span>
                            <img class="team-logo" src="@Url.Action("Resize", "Image", new { url = Model.UpComingMatch.Home.Logo.Path, width = 120, height = 120 })" alt="@Model.UpComingMatch.Home.Name">
                        </span>
                    </div>
                    <div class="info">
                        <div class="left-tiem-acounter">
                            <span class="days"><b>@Model.UpComingMatchCounter.Days</b> Gün</span>
                            <span class="hours"><b>@Model.UpComingMatchCounter.Hours</b> Saat</span>
                            <span class="minutes"><b>@Model.UpComingMatchCounter.Minutes</b> Dakika</span>
                        </div>
                        <div class="vs-box">VS</div>
                        <div class="location-marker">
                            <span><i class="fa fa-map-marker"></i>@Model.UpComingMatch.StadiumName</span>
                            <span><i class="fa fa-clock-o"></i>@TimeZoneInfo.ConvertTimeFromUtc(Model.UpComingMatch.MatchDate, TimeZoneInfo.Local).ToString("dddd, dd MMMM yyyy")</span>
                        </div>
                    </div>
                    <div class="away-team">
                        <span>
                            <img class="team-logo" src="@Url.Action("Resize", "Image", new { url = Model.UpComingMatch.Away.Logo.Path, width = 120, height = 120 })" alt="@Model.UpComingMatch.Away.Name">
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <!-- Page Heading banner -->
        <br />

    }
    <!-- Match -->
    <div class="theme-padding white-bg">
        <div class="container">
            <div class="row">
                <!-- match Contenet -->
                <div class="matches-shedule-holder">
                    <div class="col-lg-12 col-sm-12">

                        <!-- Matches Dates Shedule -->
                        <div class="matches-dates-shedule">
                            <ul>
                                @foreach (var match in Model.Matches)
                                {
                                    <li>
                                        <div class="competition-logos">
                                        <a href="@Url.Action("Detail", "Team", new { match.Home.Id })"><span class="pull-left"><img src="@Url.Action("Resize", "Image", new { url = match.Home.Logo.Path, width = 105, height = 105 })" alt="@match.Home.Name"></span></a>
                                        <a href="@Url.Action("Detail", "Team", new { match.Away.Id })"><span class="pull-right"><img src="@Url.Action("Resize", "Image", new { url = match.Away.Logo.Path, width = 105, height = 105 })" alt="@match.Away.Name"></span></a>
                                        </div>
                                        <div class="detail">
                                            <a href="#"><i></i></a>
                                            <strong>@match.Home.Name<i class="red-color"> | @TimeZoneInfo.ConvertTimeFromUtc(match.MatchDate, TimeZoneInfo.Local).ToString("dddd, dd MMMM yyyy") | </i> @match.Away.Name</strong>
                                            <span class="location-marker"><i class="fa fa-map-marker"></i>@match.StadiumName</span>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                        <!-- Matches Dates Shedule -->
                        

                    </div>
                </div>
                <!-- match Contenet -->

            </div>
        </div>
    </div>
    <!-- Match -->
}
else
	{
<div style="margin:auto;width: 50%;margin-top:100px; min-height:200px; text-align: center; margin-bottom:100px;">
    <h1>Ufukta hiç maç yok !</h1>
</div>
	}
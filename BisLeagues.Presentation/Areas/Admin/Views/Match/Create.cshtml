@model BisLeagues.Presentation.Areas.Admin.Models.ViewModels.CreateMatchViewModel
@{
    ViewData["Title"] = "Maç Oluştur";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Maç Oluştur</h4>
                        <p class="card-category">Maç bilgilerini giriniz.</p>
                    </div>
                    <div class="card-body">
                        <form action="@Url.Action("Create", "Match")" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Sezon:</label><br />
                                        <select class="form-control" name="seasonId" id="seasonId" data-style="btn btn-link" required>
                                            <option value="0" disabled selected>Sezon Seçiniz !</option>
                                            @foreach (var season in Model.Seasons)
                                            {
                                                <option value="@season.Id">@season.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Ev Sahibi Takım</label>
                                        <select class="form-control" name="homeId" id="homeId" data-style="btn btn-link">
                                            <option value="0" disabled selected>Ev sahibi takımı seçiniz.</option>
                                            @foreach (var team in Model.Teams)
                                            {
                                                <option value="@team.Id">@team.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Deplasman Takım</label>
                                        <select class="form-control" name="awayId" id="awayId" data-style="btn btn-link">
                                            <option value="0" disabled selected>Deplasman takımı seçiniz.</option>
                                            @foreach (var team in Model.Teams)
                                            {
                                                <option value="@team.Id">@team.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <label class="bmd-label-floating">Maç Tarihi</label>
                            <div class="row">
                                <div class="col-md-1">
                                    <div class="form-group">
                                        <input type="date" name="matchDate" id="matchDate" class="form-control" value="31.12.2019" />
                                    </div>
                                </div>
                                <div class="col-md-1">
                                    <div class="form-group">
                                        <input type="text" name="matchHour" id="matchHour" class="form-control" value=" 21:00" />
                                    </div>
                                </div>
                            </div>


                            <button type="submit" class="btn btn-primary pull-right">Maç Oluştur</button>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
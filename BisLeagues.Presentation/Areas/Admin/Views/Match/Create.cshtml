@model BisLeagues.Presentation.Areas.Admin.Models.ViewModels.CreateMatchViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Maç Oluştur</h4>
                        <p class="card-category">Maç bilgilerini giriniz.</p>
                    </div>
                    <div class="card-body">
                        <form action="@Url.Action("Create", "Match")" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Sezon Adı</label><br />
                                        @Model.Season.Name
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Ev Sahibi Takım</label>
                                        <select class="form-control" name="home" id="home" data-style="btn btn-link">
                                            <option value="0" disabled selected>Ev sahibi takımı seçiniz.</option>
                                            @foreach (var team in Model.Teams)
                                            {
                                                <option value="@team.Id">@team.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Deplasman Takım</label>
                                        <select class="form-control" name="away" id="away" data-style="btn btn-link">
                                            <option value="0" disabled selected>Deplasman takımı seçiniz.</option>
                                            @foreach (var team in Model.Teams)
                                            {
                                                <option value="@team.Id">@team.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Maç Tarihi</label>
                                        <input type="text" class="form-control" value="" />
                                    </div>

                                </div>
                            </div>


                            <button type="submit" class="btn btn-primary pull-right">Maç Oluştur</button>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>